DEVICE={{ kubeansi.lan_pxe.interface }}
NAME=pxe
TYPE=Ethernet
BOOTPROTO=static
IPADDR={{ kubeansi.lan_pxe.ip }}
PREFIX={{ (kubeansi.lan_pxe.ip + '/' + kubeansi.lan_pxe.netmask) | ipaddr('prefix') }}
{% if kubeansi.lan_pxe.gateway is defined and kubeansi.lan_pxe.gateway is not none and kubeansi.lan_pxe.gateway != false %}
GATEWAY={{ kubeansi.lan_pxe.gateway }}
DEFROUTE=yes
{% else %}
DEFROUTE=no
{% endif %}
ONBOOT=yes
IPV6INIT=no
IPV6_AUTOCONF=no
IPV6_DEFROUTE=no
IPV6_PEERDNS=no
IPV6_PEERROUTES=no
IPV6_FAILURE_FATAL=no

