DEVICE={{ kubeansi.lan_internal.interface }}
NAME=control
TYPE=Ethernet
BOOTPROTO=static
IPADDR={{ kubeansi.lan_internal.ip }}
PREFIX={{ (kubeansi.lan_internal.ip + '/' + kubeansi.lan_internal.netmask) | ipaddr('prefix') }}
{% if kubeansi.lan_internal.gateway is defined and kubeansi.lan_internal.gateway is not none and kubeansi.lan_internal.gateway != false %}
GATEWAY={{ kubeansi.lan_internal.gateway }}
DEFROUTE=yes
{% else %}
DEFROUTE=no
{% endif %}
ONBOOT=yes
IPV6INIT=no
IPV6_AUTOCONF=no
IPV6_DEFROUTE=no
IPV6_PEERDNS=no
IPV6_PEERROUTES=no
IPV6_FAILURE_FATAL=no